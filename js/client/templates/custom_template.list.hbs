
<h1 class="custom-title">This is the custom list</h1>

{{#link-to model.__meta__.newRouteName}}create{{/link-to}}

{{#each item in model}}
    <div class="item">
        {{#link-to item.__meta__.displayRouteName item._id classNames="item-title"}}
            {{item.title}}{{#if item.boolean}} !!{{/if}}
        {{/link-to}}
        <p class="item-description">--{{item.description}}:{{item.customField}}--</p>
    </div>
{{/each}}